BoxLayout:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: input_number
                text: '10'
                multiline: False
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'up'
                    on_press: app.add_one_to_input(input_number.text)
                Button:
                    text: 'down'
                    on_press: app.take_one_from_input(input_number.text)

        Button:
            text: 'Convert Miles to KM'
            on_press: app.convert_distance(input_number.text)
        Label:
            id: output_distance
            text: 'Output distance'
            color: (1, 1, 0, 1)